<% provide :title, show_room_type %>
<%= render "shared/breadcrumb" %>
<div class="wrapper large-padding-top">
  <div class="content">
    <h1><%= show_room_type %><br /></h1>
    <ul>
      <li><%= @room_type.description %></li>
      <li><%= t ".bed" %><%= @room_type.bed_num %></li>
      <% if @room_type.air_conditioner %>
        <li><%= t ".air_conditioner" %></li>
      <% end %>
      <li><%= t ".cost" %><%= @room_type.cost %><%= t ".per_day" %></li>
    </ul>
    <% @room_type.images.each do |image| %>
      <%= image_tag display_image(image) %> <br />
    <% end %>

    <% if @rooms.present? %>
      <p><%= t ".can_book" %></p>
      <%= link_to t(".book"), book_path, class: "btn btn-primary" %>
    <% else %>
      <p><%= t ".booked" %></p>
    <% end %>
  </div>
  <div class="vertical-line-y"></div>
  <div class="content">
    <ul class="rooms">
      <h1><%= t ".list" %></h1>
      <% @rooms.each do |room| %>
        <li>
          <%= link_to show_room(room), admin_room_path(room) %><br />
          <%= room.description %><br />
          <div class="vertical-line-x"></div>
          <br />
        </li>
      <% end %>
    </ul>
  </div>
</div>
<% if current_user&.admin? %>
  <%= link_to [:admin, @room_type], :remote => true, method: :delete, data: {confirm: t(".confirm")} do %>
    <%= t(".submit") %>
  <% end %>
<% end %>
