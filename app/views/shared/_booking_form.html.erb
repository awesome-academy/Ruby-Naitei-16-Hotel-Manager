<%= form_for @booking do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row hotel_booking_table">
    <div class="col-md-3 table-title">
      <h2><%= t ".book" %><br> <%= t ".your_room" %></h2>
    </div>
    <div class="col-md-9">
      <div class="boking_table">
        <div class="row">
          <div class="col-md-2">
            <div class="book_tabel_item">
              <div class="label-group">
                <div class="label-item"><%= t ".checkin" %></div>
                <div class="label-item"><%= t ".checkout" %></div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="book_tabel_item">
              <div class="form-group">
                <div class="input-group date">
                  <%= f.date_field :checkin, value: params[:booking][:checkin], class: "form-control" %>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group date" id="datetimepicker">
                  <%= f.date_field :checkout, value: params[:booking][:checkout], class: "form-control" %>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="book_tabel_item">
              <div class="input-group">
                <%= f.collection_select :room_type, @room_types, :id, :name,
                  {prompt: t(".room_type")}, required: true,
                  class: "nice-select" %>
              </div>
              <div class="input-group">
                <%= f.select :total, [], {prompt: t(".number")}, required: true,
                class: "nice-select" %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="book_tabel_item">
              <%= f.submit t(".book_now"), class: "book_now_btn button_hover" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
